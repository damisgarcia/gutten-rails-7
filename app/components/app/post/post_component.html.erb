<article class="gutten-post prose prose-lg" data-controller="post">
  <h1 class="my-5">
    <%= @post.title %>
  </h1>
  <% if @post.image.persisted? %>
    <figure class="flex justify-center">
      <%= image_tag @post.image.variant(:medium), class: 'object-cover rounded-lg w-full h-96' %>
    </figure>
  <% end %>
  <p class="my-5">
    <%= @post.body %>
  </p>
</article>
