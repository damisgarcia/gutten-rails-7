<% model = User %>
<div class="mb-8">
  <%= search_form_for [:admin, @q] do |f| %>
    <div class="flex items-end gap-6">
      <div class="form-control">
        <%= f.label :first_name_or_last_name_cont, model.human_attribute_name(:name) %>
        <%= f.search_field :first_name_or_last_name_cont, class: "input input-bordered w-full rounded-md max-w-xs", placeholder: "Search" %>
      </div>
      <div class="form-control">
        <%= f.label :created_at_gteq, "Created at begining" %>
        <%= f.datetime_field :created_at_gteq, class: "input input-bordered w-full rounded-md max-w-xs", placeholder: "Start" %>
      </div>
      <div class="form-control">
        <%= f.label :created_at_lteq, "Created at ending" %>
        <%= f.datetime_field :created_at_lteq, class: "input input-bordered w-full rounded-md max-w-xs", placeholder: "End" %>
      </div>
      <%= f.submit "Search", class: "admin-button is-default" %>
    </div>
  <% end %>
</div>
