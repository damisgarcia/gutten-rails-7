<nav class="admin-header">
  <div class="container mx-auto">
    <div class="navbar items-center px-6 gap-4">
      <button
        class="appearance-none sm:hidden hover:cursor-pointer"
        data-controller="admin--toggle-aside-button"
        data-action="admin--toggle-aside-button#toggle"
        data-admin--toggle-aside-button-aside-param="default-sidebar"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
          <path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"/>
        </svg>
      </button>
      <div class="flex flex-1 justify-center sm:hidden">
        <%= link_to admin_posts_path, class: "flex items-center ps-2.5" do %>
          <%= image_tag "https://flowbite.com/docs/images/logo.svg", class: "h-6 me-3 sm:h-7", alt: "Flowbite Logo" %>
          <span class="self-center text-xl font-semibold whitespace-nowrap">
            Gutten
          </span>
        <% end %>
      </div>
      <div class="flex-1 hidden sm:block">
        <%= render "layouts/admin/header_search" %>
      </div>
      <div class="flex-none gap-2">
        <div class="dropdown dropdown-end">
          <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
            <div class="w-10 rounded-full">
              <%= image_tag current_user.avatar.variant(:thumb) if current_user.avatar.present? %>
              <%= image_tag "https://avatars.dicebear.com/api/avataaars/#{current_user.email}.svg" unless current_user.avatar.present? %>
            </div>
          </div>
          <ul tabindex="0" class="mt-3 z-[1] p-2 shadow menu menu-sm dropdown-content bg-base-100 rounded-box w-52">
            <li>
              <%= link_to current_user.email, admin_user_path(current_user) %>
            </li>
            <li>
              <%= link_to "Settings", edit_admin_user_path(current_user) %>
            </li>
            <li>
              <%= link_to "Logout", destroy_user_session_path, data: { "turbo-method": :delete } %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</nav>
